                }
              ]
            }
          }
        },
        {
          "name": "Get Student by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/students/1",
              "host": ["{{baseUrl}}"],
              "path": ["students", "1"]
            }
          }
        },
        {
          "name": "Update Student",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Smith\",\n  \"age\": 17\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/students/1",
              "host": ["{{baseUrl}}"],
              "path": ["students", "1"]
            }
          }
        },
        {
          "name": "Delete Student",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/students/1",
              "host": ["{{baseUrl}}"],
              "path": ["students", "1"]
            }
          }
        }
      ]
    }
  ]
}
