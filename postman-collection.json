            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Mathematics\",\n  \"section\": \"A\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/classes",
              "host": ["{{baseUrl}}"],
              "path": ["classes"]
            }
          }
        },
        {
          "name": "Get All Classes",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/classes",
              "host": ["{{baseUrl}}"],
              "path": ["classes"]
            }
          }
        },
        {
          "name": "Get Class by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/classes/1",
              "host": ["{{baseUrl}}"],
              "path": ["classes", "1"]
            }
          }
        },
        {
          "name": "Update Class",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Advanced Mathematics\",\n  \"section\": \"A\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/classes/1",
              "host": ["{{baseUrl}}"],
              "path": ["classes", "1"]
            }
          }
        },
        {
          "name": "Enroll Student in Class",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"studentId\": 1\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/classes/1/enroll",
              "host": ["{{baseUrl}}"],
              "path": ["classes", "1", "enroll"]
            }
          }
        },
        {
          "name": "Get Class Students",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/classes/1/students",
              "host": ["{{baseUrl}}"],
              "path": ["classes", "1", "students"]
            }
          }
        },
        {
          "name": "Delete Class",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/classes/1",
              "host": ["{{baseUrl}}"],
              "path": ["classes", "1"]
            }
          }
        }
      ]
    },
    {
      "name": "Students",
      "item": [
        {
          "name": "Create Student",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe\",\n  \"age\": 16,\n  \"classId\": 1\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/students",
              "host": ["{{baseUrl}}"],
              "path": ["students"]
            }
          }
        },
        {
          "name": "Get All Students",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/students?page=1&limit=10",
